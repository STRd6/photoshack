body
  background-color: gray

palette, colors
  display: block

palette
  > textarea
    display: none

  > button.apply
    display: none

  &.edit
    > colors
      display: none
    > textarea
      display: block
    > button.apply
      display: initial
    > button.edit
      display: none

colors > color
  display: inline-block
  height: 16px
  width: 16px

editor
  display: flex
  flex: 1
  flex-direction: column

  > button
    flex: 0
    font-size: 32px
    margin: 1em auto

  > section.filter
    display: flex
    flex-direction: column
    margin: auto

    > filter-view
      display: block
      position: relative
  
      > background
        display: block
        height: 100%
        left: 0
        position: absolute
        top: 0
        width: 100%
  
      > img, > video
        display: block

  > section.captures
    background-color: #EEE
    display: flex
    height: 64px
    margin-top: auto

    > *
      margin-right: 1em
      max-height: 64px

      &:last-child
        margin-right: 0

#modal
  > input[type=file]
    padding: 2em

section.filters
  padding-right: 1em
  max-width: 400px

  > section
    display: flex

    > h2
      align-self: center
      display: inline-block
      font-size: 1em
      margin: 0 1em 0 0
      text-align: right
      width: 100px

    > input
      &[type="range"]
        flex: 1

      &[type="number"]
        text-align: right
        width: 60px

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
  margin-left: 0.5em
